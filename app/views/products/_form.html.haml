= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :synopsis
    = f.text_field :synopsis
  .field
    = f.label :detail
    = f.text_field :detail
  .field
    = f.label :Type
    = f.text_field :Type
  .actions
    = f.submit 'Save'
