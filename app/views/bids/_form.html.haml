= form_for @bid do |f|
  - if @bid.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bid.errors.count, "error")} prohibited this bid from being saved:"
      %ul
        - @bid.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :position
    = f.text_field :position
  .field
    = f.label :department
    = f.text_field :department
  .field
    = f.label :deadline
    = f.datetime_select :deadline
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
