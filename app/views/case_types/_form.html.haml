= form_for @case_type do |f|
  - if @case_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@case_type.errors.count, "error")} prohibited this case_type from being saved:"
      %ul
        - @case_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
