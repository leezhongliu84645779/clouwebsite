= form_for @service_case do |f|
  - if @service_case.errors.any?
    #error_explanation
      %h2= "#{pluralize(@service_case.errors.count, "error")} prohibited this service_case from being saved:"
      %ul
        - @service_case.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :Type
    = f.text_field :Type
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :attachment
    = f.text_field :attachment
  .actions
    = f.submit 'Save'
