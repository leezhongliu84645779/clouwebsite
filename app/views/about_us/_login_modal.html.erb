<title>用户登录</title>
<link rel="stylesheet" type="text/css" href="/css/sign_up.css">

<div class="modal hide fade" id="login" 
style="margin:auto;width:340px;border-radius: 5px;background-color:white;height:500px;top:100px;">
  <!--<div class="modal-header">-->
  <!--  <button class="close" data-dismiss="modal">x</button>-->
  <!--  <img border="0" alt="logo" src="/img/homepage/logo.png" class="popup_logo" width="192" height="28">-->
  <!--</div>-->
  
  <div class="modal-body">
      <img border="0" alt="logo" src="/img/homepage/logo.png" class="popup_logo">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div>
        <%= f.email_field :email, autofocus: true, :class => 'popup_field', :placeholder => "请输入用户名" %>
        <%= f.password_field :password, autocomplete: "off", :class => 'popup_field', :placeholder => "请输入密码" %>
        <%= f.submit "登录", :class => 'popup_submit' %>
        <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label :记住我, :class => "smallredword" %>
        <% end %>
        <a style="margin-top: 21px; color:#C4261D; float:right; margin-bottom:118px;" href="/users/password/new"</a>忘记密码？</a>
      </div>
    <% end %>
  </div>
  
  <div class="modal-footer">

  </div>
</div>