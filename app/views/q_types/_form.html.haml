= form_for @q_type do |f|
  - if @q_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@q_type.errors.count, "error")} prohibited this q_type from being saved:"
      %ul
        - @q_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
